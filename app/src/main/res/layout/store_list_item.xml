<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/storeImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/pizzahut" />

            <ImageView
                android:id="@+id/isCescoImg"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/csco" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/storeNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="피자헛 - 혜화점" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/starImg1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/fillstar" />

                <ImageView
                    android:id="@+id/starImg2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/fillstar" />

                <ImageView
                    android:id="@+id/starImg3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/fillstar" />

                <ImageView
                    android:id="@+id/starImg4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/fillstar" />

                <ImageView
                    android:id="@+id/starImg5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/graystar" />

                <TextView
                    android:id="@+id/avgRatingAndReviewCountTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="4.5점 / 42건의 리뷰" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/openAndCloseTimeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00 - 22:30" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/minCostTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12000원 이상 배달" />

            </LinearLayout>

            <TextView
                android:id="@+id/payMethodTypeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="요기서 결재"
                android:textColor="#FF11" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>